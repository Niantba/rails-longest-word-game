<div>
  <h1>New game</h1>

    <% @letters.each do |letter| %>
      <span class="badge bg-primary"><%= letter %></span>
    <% end %>

  <p >What's the longest word you can find?</p>

  <form action="score" method="post" data-turbo="false">
    <div class="input-group mb-3 w-50">
      <input type="text" class="form-control" placeholder="Type your word" name="word">
      <button type="submit" class="btn btn-primary" type="button">Play</button>
    </div>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>

</div>
